<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#32CD32" /> <!-- Green -->
            <stroke android:width="3dp" android:color="#000000" /> <!-- Black border -->
        </shape>
    </item>
    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#90EE90" /> <!-- Light Green -->
            <stroke android:width="2dp" android:color="#32CD32" /> <!-- Green border -->
        </shape>
    </item>
</selector>
