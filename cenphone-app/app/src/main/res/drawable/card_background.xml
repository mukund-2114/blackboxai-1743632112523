<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the card -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Shadow-like effect (elevation simulation for older devices) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Stroke outline (optional, can be removed if not needed) -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />

</shape>
