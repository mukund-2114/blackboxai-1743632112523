<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FF69B4" /> <!-- Pink -->
            <stroke android:width="3dp" android:color="#000000" /> <!-- Black border -->
        </shape>
    </item>
    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFB6C1" /> <!-- Light Pink -->
            <stroke android:width="2dp" android:color="#FF69B4" /> <!-- Pink border -->
        </shape>
    </item>
</selector>
